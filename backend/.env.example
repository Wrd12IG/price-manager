# Database
DATABASE_URL="postgresql://user:password@localhost:5432/ecommerce_price_manager?schema=public"

# Server
PORT=3000
NODE_ENV=development

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Encryption (per credenziali fornitori)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Redis (per Bull Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ICecat API
ICECAT_USERNAME=
ICECAT_API_KEY=
ICECAT_LANGUAGE=it
ICECAT_FALLBACK_LANGUAGE=en

# AI Provider (scegli uno)
AI_PROVIDER=openai  # openai, anthropic, google

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google Gemini
GOOGLE_API_KEY=
GOOGLE_MODEL=gemini-pro

# Shopify
SHOPIFY_SHOP_URL=your-shop.myshopify.com
SHOPIFY_API_KEY=
SHOPIFY_API_PASSWORD=
SHOPIFY_API_VERSION=2024-01

# Email (per notifiche)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@yourdomain.com
EMAIL_TO=admin@yourdomain.com

# Slack (opzionale)
SLACK_WEBHOOK_URL=

# Telegram (opzionale)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Scheduler
CRON_EXPRESSION=0 2 * * *  # Esegui ogni giorno alle 2:00 AM
AUTO_RUN_ENABLED=true

# File Upload
MAX_FILE_SIZE=50MB
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info  # error, warn, info, debug
LOG_DIR=./logs

# CORS
CORS_ORIGIN=http://localhost:5173
